<div class="container-cocktail-show-edit">
  <div class="cocktail-ingredients">
    <div class="cocktail-show">
      <div class="card-cocktail-edit">
        <h3><%= @cocktail.name %></h3>
      </div>
      <div class="edit-img" style="background-image: url(<%= @cocktail.photo %>);"></div>

      <div class="form-cocktail">
        <div class="name-edit">
          <h3>Edit Cocktail</h3>
        </div>
        <%= simple_form_for(@cocktail) do |f| %>
          <%= f.input :name, label: 'Cocktail name' %>
          <br>
          <%= f.input :photo, label: 'Photo url' %>
          <%= f.input :photo_change, as: :hidden %>
          <br>
          <%= f.button :submit, value="Submit", class: 'btn-create-cocktail' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
